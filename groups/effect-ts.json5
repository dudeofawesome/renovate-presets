{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  packageRules: [
    {
      groupName: 'Effect',
      groupSlug: 'effect',
      prPriority: 10,
      commitMessageTopic: 'Effect',
      matchDatasources: ['npm'],
      matchPackageNames: [
        // effect-ts packages
        'effect',
        '@effect/**',

        /* === 3rd-party Effect packages === */
        '@effect-aws/**',

        /* === peer dependencies === */
        // OpenTelemetry packages
        '@opentelemetry/**',
        // drizzle packages
        'drizzle-orm',
        'drizzle-kit',
        // DB drivers
        'postgres',
        'mysql2',
        // vite packages
        'vitest',
        '@vitest/**',
        'vite-tsconfig-paths',
      ],
      matchUpdateTypes: ['major', 'minor', 'patch'],
    },
  ],
}
