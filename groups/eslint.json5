{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  packageRules: [
    {
      // TODO: improve summary "chore(deps): update eslint to v6"

      groupName: 'ESLint',
      groupSlug: 'eslint',
      prPriority: 5,
      commitMessageTopic: 'ESLint',
      matchDatasources: ['npm'],
      matchPackageNames: [
        // primary package
        'eslint',
        // plugins
        'eslint-**',
      ],
      matchUpdateTypes: ['major', 'minor', 'patch'],
    },
  ],
}
