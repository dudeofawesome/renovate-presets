{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',

  packageRules: [
    {
      groupName: 'HeroUI',
      groupSlug: 'heroui',
      prPriority: 10,
      commitMessageTopic: 'HeroUI',
      matchDatasources: ['npm'],
      matchPackageNames: [
        // heroui packages
        '@heroui/**',
        '@nextui-org/**',
        // peer dependencies
        'next-themes',
        'framer-motion',
      ],
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
        'pin',
        'replacement',
        'bump',
        'lockFileMaintenance',
      ],
    },
  ],
}
